{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2015.promise",
      "es2015.reflect",
      "es2015.promise",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "react-native": [
        "../react-native"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "jest",
    "tools",
    "webpack.config.js",
    "postcss.config.js"
  ]
}
